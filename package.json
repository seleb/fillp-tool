{
  "private": true,
  "name": "fillp-tool",
  "version": "1.6.2",
  "description": "Helper for creating PICO-8 fillp patterns",
  "author": "Sean S. LeBlanc <sean.s.leblanc@gmail.com>",
  "license": "MIT",
  "repository": "github:seleb/fillp-tool",
  "scripts": {
    "start": "vite dev",
    "build": "npm run build:cleanup && npm run build:vite && npm run build:sw",
    "build:cleanup": "rm -rf docs",
    "build:vite": "vite build",
    "build:sw": "workbox generateSW",
    "postversion": "npm run build"
  },
  "dependencies": {
    "draw-1-bit": "^1.1.1",
    "localforage": "^1.10.0",
    "preact": "^10.7.1",
    "reset-css": "^5.0.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.2.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "typescript": "^4.2.4",
    "vite": "^2.9.1",
    "workbox-cli": "^6.1.5"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/*",
            "README.md",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  }
}
